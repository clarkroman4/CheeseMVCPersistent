@model CheeseMVC.ViewModels.AddMenuViewModel;
@{
    ViewData["Title"] = "Add";
}

<h2>Add Menu</h2>

<form asp-controller="Menu" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="MenuName"></label>
        <input class="form-control" asp-for="MenuName"/>
        <span asp-validation-for="MenuName"></span>
    </div>
    <input type="submit" value="Add Menu"/>
</form>

